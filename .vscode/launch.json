    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Calc phi-3.5",
            "type": "debugpy",
            "request": "launch",
            "program": "estimate_complexity.py",
            "console": "integratedTerminal",
            "args": [
                "--model-name",
                "microsoft/Phi-3.5-vision-instruct",
                "--image-file",
                "./assets/airplane.jpeg",
                "--query",
                "Tell me the model of this aircraft.",
                "--max_new_tokens",
                "1024",
                "--device",
                "cuda",
            ]
        },
        {
            "name": "Calc Qwen2-VL-2B",
            "type": "debugpy",
            "request": "launch",
            "program": "estimate_complexity.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--model-name",
                "Qwen/Qwen2-VL-2B-Instruct",
                "--image-file",
                "./assets/airplane.jpeg",
                "--query",
                "Tell me the model of this aircraft.",
                "--max_new_tokens",
                "1024",
                "--device",
                "cuda",
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            }
        },
        {
            "name": "Calc Qwen2-VL-7B",
            "type": "debugpy",
            "request": "launch",
            "program": "estimate_complexity.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--model-name",
                "Qwen/Qwen2-VL-7B-Instruct",
                "--image-file",
                "./assets/airplane.jpeg",
                "--query",
                "Tell me the model of this aircraft.",
                "--max_new_tokens",
                "1024",
                "--device",
                "cuda",
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            }
        }
    ]
}